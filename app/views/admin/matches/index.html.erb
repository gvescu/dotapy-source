<div class="row text-center">
	<h2>Partidas</h2>
</div>

<div class="row">
	
	<div class="large-12 columns">
		<table width="100%">
			<thead>
				<tr>
					<th width="40%">Descripción</th>
					<th width="20%">Cargador</th>
					<th width="20%">Fecha</th>
					<th width="20%">&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @matches.each do |match| %>
				<tr>
					<td><p><%= match.description %></p></td>
					<td><p><%= match.user.nickname %></p></td>
					<td><p><%= l match.created_at, format: :short %></p></td>
					<td class="text-center">
						<ul class="button-group">
							<li><%= link_to "E", edit_admin_match_path(id: match.id), {class: 'button tiny'} %></li>
							<li><%= link_to "D", admin_match_path(id: match.id), method: :delete, data: {confirm: '¿Esta seguro de querer eliminar la partida?'}, class: 'button tiny' %></li>
						</ul>
					</td>
				</tr>
				<% end %>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="4" class="text-center">
						<%= will_paginate @matches %>
					</td>
				</tr>
			</tfoot>
		</table>
	</div>

</div>